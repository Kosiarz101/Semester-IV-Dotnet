@page
@model FizzBuzzBazaDanych.Pages.DeleteModel
@{
}

@inject UserManager<IdentityUser> UserManager
@using Microsoft.AspNetCore.Identity

<h3>Czy na pewno chcesz usunąć ten wpis?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FizzBuzz.Result)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FizzBuzz.Result)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FizzBuzz.SearchedValue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FizzBuzz.SearchedValue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FizzBuzz.LastSearchDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FizzBuzz.LastSearchDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FizzBuzz.Creator)
        </dt>
        @if (Model.FizzBuzz.Creator == UserManager.GetUserId(User))
        {
            <dt class="col-sm-2">
                <h6>Ten wpis został dodany przez ciebie</h6>
            </dt>
        }
        else
        {
            <dd class="col-sm-10">
                <p class="text-secondary">Ten wpis został dodany przez innego użytkownia. Oznacza to, że nie możesz go usunąć</p>
            </dd>
        }
    </dl>
    @if (Model.FizzBuzz.Creator == UserManager.GetUserId(User))
    {
        <form method="post">
            <input type="hidden" asp-for="FizzBuzz.Id" />
            <input type="submit" value="Usuń" class="btn btn-danger" /> |
            <a asp-page="./Index">Wróć do strony głównej</a>
        </form>
    }
</div>