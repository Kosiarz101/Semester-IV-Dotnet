@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome @Model.Name</h1>

    <form method="post">
        <div class="form-row">
            <div class="col">
                <label asp-for="Address.Street"></label>
                <span asp-validation-for="Address.Street" class="text-danger"></span>
                <input class="form-control" asp-for="Address.Street" /><br />
            </div>
            <div class="col">
                <label asp-for="Address.Number"></label>
                <input class="form-control" asp-for="Address.Number" /><br />
            </div>
            <div class="col">
                <label asp-for="Address.ZipCode"></label>
                <input class="form-control" asp-for="Address.ZipCode" /><br />
            </div>
            <div class="col">
                <label asp-for="Address.City"></label>
                <input class="form-control" asp-for="Address.City" /><br />
            </div>
        </div>
                <br><button class="btn btn-primary" type="submit">Zatwierdź</button>           
</form>
</div>

